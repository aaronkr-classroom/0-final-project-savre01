                      <input
                        type="text"
                        name="gamename"
                        id="inputGamename"
                        class="form-control"
                        value="<%= game.gamename %>"
                        placeholder="Gamename"
                        autofocus
                      />
                    </td>
                  </tr>
                  <tr>
                    <th scope="col">User Name</th>
                    <td colspan="2" class="pt-0 pb-0 px-0">
                      <input
                        type="text"
                        name="first"
                        id="inputFirstName"
                        class="form-control"
                        value="<%= game.name.first %>"
                        placeholder="First name"
